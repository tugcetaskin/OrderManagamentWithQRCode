@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UILayout/WithoutSlider.cshtml";
}
<div class="container mt-5">
	<div class="row">
		<div class="col-12">
			<h3 class="text-center mb-4">Mesaj Sayfası</h3>
		</div>
	</div>

	<div class="row p-1">
		<div class="col-2"> Kullanıcı Adınız:</div>
		<div class="col-5">
			<input type="text" id="userInput" class="form-control"/>
		</div>
	</div>

	<div class="row p-1">
		<div class="col-2"> Mesajınız:</div>
		<div class="col-5">
			<input type="text" id="messageInput" class="form-control" />
		</div>
	</div>

	<div class="row p-1">
		<div class="col-2"></div>
		<div class="col-3">
			<input type="button" id="sendButton" class="btn btn-warning" value="Gönder"/>
		</div>
	</div>

	<div class="row p-1">
		<div class="col-12">
			<hr />
		</div>
	</div>

	<div class="row p-1">
		<div class="col-12">
			<ul id="messageList" class="list-group">
			</ul>
		</div>
	</div>
	<br />
	<br />
	<br />
	<br />
	<br />
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>

