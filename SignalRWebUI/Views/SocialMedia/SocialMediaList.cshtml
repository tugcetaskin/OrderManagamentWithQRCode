@using SignalRWebUI.DTOs.SocialMediaDTOs
@model List<ResultSocialMediaDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sosyal Medya Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Id </th>
                            <th> İkon </th>
                            <th> Başlık </th>
                            <th> Url </th>
                            <th> Güncelle </th>
                            <th> Sil </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td> @count </td>
                                <td class="py-1">
                                    <i class="@item.Icon"></i>
                                </td>
                                <td> @item.Title </td>
                                <td> @(item.Url.Length > 50 ? item.Url.Substring(0,50)+"..." : item.Url ) </td>
                                <td> <a href="/SocialMedia/Update/@item.Id" class="btn btn-success"><i class="mdi mdi-refresh"></i></a> </td>
                                <td><a href="/SocialMedia/Delete/@item.Id" class="badge badge-danger"><i class="mdi mdi-delete"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/SocialMedia/Create" class="badge badge-info">Ekle</a>
            </div>
        </div>
    </div>
</div>

