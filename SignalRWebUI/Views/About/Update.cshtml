@model SignalRWebUI.DTOs.AboutDTOs.UpdateAboutDTO
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımda Alanı Güncelle</h4>
            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <div class="form-group">
                    <label for="Title"> Başlık </label>
                    <input type="text" class="form-control" asp-for="Title" id="Name">
                </div>

                <input type="hidden" asp-for="ImageUrl" value="@Model.ImageUrl"/>
                <div class="form-group">
                    <label for="Description"> Açıklama </label>
                    <input type="text" class="form-control" asp-for="Description" id="Name">
                </div>

                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a href="/About/Index" class="btn btn-dark">Çık</a>
            </form>
        </div>
    </div>
</div>