@model SignalRWebUI.DTOs.SliderDTOs.UpdateSliderDTO
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Öne Çıkanlar Bilgisi Güncelle</h4>
            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="Id"/>
                <div class="form-group">
                    <label for="Title1">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title" id="Title1">
                </div>

                <div class="form-group">
                    <label for="Description1">Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description" id="Description1">
                </div>

                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a href="/Feature/FeatureList" class="btn btn-dark">Çık</a>
            </form>
        </div>
    </div>
</div>

