@using SignalRWebUI.DTOs.BookingDTOs
@model List<ResultBookingDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Rezervaasyon Listesi</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>İsim</th>
                            <th>Telefon</th>
                            <th>Email</th>
                            <th>Kişi Sayısı</th>
                            <th>Tarih</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td>@item.PersonCount</td>
                                <td>@item.Date</td>
                                <td><a href="/Booking/Update/@item.Id" class="btn btn-success">Güncelle</a></td>
                                <td><a href="/Booking/Delete/@item.Id" class="badge badge-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Booking/Create" class="badge badge-info">Ekle</a>
            </div>
        </div>
    </div>
</div>

