@model SignalRWebUI.DTOs.BookingDTOs.UpdateBookingDTO
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Rezervasyon Bilgilerini Güncelle</h4>
            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="Id" value="@Model.Id"/>
                <div class="form-group">
                    <label for="Name">İsim</label>
                    <input type="text" class="form-control" asp-for="Name" id="Name">
                </div>

                <div class="form-group">
                    <label for="Phone">Telefon</label>
                    <input type="text" class="form-control" asp-for="Phone" id="Phone">
                </div>

                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="text" class="form-control" asp-for="Email" id="Email">
                </div>

                <div class="form-group">
                    <label for="PersonCount">Kişi Sayısı</label>
                    <input type="text" class="form-control" asp-for="PersonCount" id="PersonCount">
                </div>

                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a href="/Booking/Index" class="btn btn-dark">Çık</a>
            </form>
        </div>
    </div>
</div>

