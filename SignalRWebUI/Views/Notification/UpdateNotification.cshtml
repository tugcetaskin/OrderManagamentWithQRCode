@using SignalRWebUI.DTOs.NotificationDTOs
@model UpdateNotificationDTO
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bildirimi Güncelle</h4>
            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="@Model.Id" />
                <div class="form-group">
                    <label for="Name">Bildirim İçeriği</label>
                    <input type="text" class="form-control" asp-for="Description" id="Description">
                </div>

                <div class="form-group">
                    <label for="Status">Durum</label>
                    <select class="form-control" asp-for="Status" id="Status">
                        <option>True</option>
                        <option>False</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="Status">Icon</label>
                    <select class="form-control" asp-for="Icon" id="Icon">
                        <option value="mdi mdi-account-multiple-plus text-success">Rezervasyon</option>
                        <option value="mdi mdi-alarm text-danger">Alım</option>
                        <option value="mdi mdi-basket text-warning">Çalışan</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a href="/Notification/Index" class="btn btn-dark">Çık</a>
            </form>
        </div>
    </div>
</div>

