@using SignalRWebUI.DTOs.TableDTOs
@model List<ResultTableDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Masa Listesi</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Masa Adı</th>
                            <th>Kişi Sayısı</th>
                            <th>Durum</th>
                            <th>Dolu</th>
                            <th>Boş</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.TableFor</td>
                                <td>
                                    @if(item.Status == true)
                                    {
                                        <p>Boş</p>
                                    }
                                    else
                                    {
                                        <p>Dolu</p>
                                    }
                                </td>
                                <td><a href="/Table/Full/@item.Id" class="btn btn-info">Dolu</a></td>
                                <td><a href="/Table/Available/@item.Id" class="btn btn-primary">Boş</a></td>
                                <td><a href="/Table/UpdateTable/@item.Id" class="btn btn-success"><i class="mdi mdi-refresh"></i></a></td>
                                <td><a href="/Table/DeleteTable/@item.Id" class="badge badge-danger"><i class="mdi mdi-delete"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Table/CreateTable" class="badge badge-info">Ekle</a>
            </div>
        </div>
    </div>
</div>
