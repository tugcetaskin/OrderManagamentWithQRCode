@model List<SignalRWebUI.DTOs.DiscountDTOs.ResultDiscountDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İndirim Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Resim</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Miktar</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.Id </td>
                                <td class="py-1">
                                    <img src="@item.ImageUrl" alt="image" />
                                </td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.Amount</td>
                                <td> <a href="/Discount/Update/@item.Id" class="btn btn-success">Güncelle</a> </td>
                                <td><a href="/Discount/Delete/@item.Id" class="badge badge-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Discount/Create" class="badge badge-info">Ekle</a>
            </div>
        </div>
    </div>
</div>